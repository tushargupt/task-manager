<%- include("header") -%>

<div class="box" id="heading">
    <h1>Completed Task</h1>
</div>

<% let cnt=0; %> 
<% for(let i =0; i < localStorage.length; i++){ %>
<% if((localStorage.key(i)).startsWith("comp")) %>
<% cnt++; } %>

<div class="box">
    <form>
      <% if(cnt<=10) {%> 
        <% for(let i =localStorage.length-1; i >=0 ; i--){ %> 
        <% if((localStorage.key(i)).startsWith("comp")) { %> 
          <div class="box">
           <% let inn = JSON.parse(localStorage.getItem(localStorage.key(i))) %> 
           <p class="item"> <%= inn.title %> </p>
            <p class="item"> <%= inn.description %>  </p>
            <p class="item"> <%= inn.date  %>  </p>
           </div> 
        <% } %> 
          <% } %>
        <% }else{ %> 
          <% let i =localStorage.length-1; %> 
          <% let c = 0; %> 
          <% while(c<10 && i>=0){ %> 
          <% if((localStorage.key(i)).startsWith("comp")) { %> 
            <% c++ %> 
            <div class="box">
             <% let inn = JSON.parse(localStorage.getItem(localStorage.key(i))) %> 
             <p class="item"> <%= inn.title %> </p>
              <p class="item"> <%= inn.description %>  </p>
              <p class="item"> <%= inn.date  %>  </p>
             </div> 
          <% } %> 
          <% i--; %> 
          <% } %> 
    <% } %> 
        </form>
    </div>


<%- include("footer") -%>